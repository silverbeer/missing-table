    "steps": [
      {"action": "navigate", "target": "/signup"},
      {"action": "fill", "field": "email", "value": "newuser@example.com"},
      {"action": "fill", "field": "password", "value": "NewUser123!"},
      {"action": "fill", "field": "confirm_password", "value": "NewUser123!"},
      {"action": "click", "target": "submit"},
      {"action": "verify", "condition": "redirect", "value": "/"}
    ]
  },
  {
    "id": "team_manager_view_team",
    "description": "Team manager views their team standings",
    "steps": [
      {"action": "login", "user": "team_manager"},
      {"action": "navigate", "target": "/"},
      {"action": "filter", "field": "team", "value": "My Team"},
      {"action": "verify", "condition": "team_in_standings"}
    ]
  },
  {
    "id": "admin_manage_match",
    "description": "Admin creates and updates a match",
    "steps": [
      {"action": "login", "user": "admin"},
      {"action": "navigate", "target": "/admin"},
      {"action": "click", "target": "matches_tab"},
      {"action": "click", "target": "add_match"},
      {"action": "fill_match_form"},
      {"action": "verify", "condition": "match_created"}
    ]
  }
