[run]
# Source code directory
source = .

# Files to omit from coverage
omit = 
    tests/*
    __pycache__/*
    .venv/*
    venv/*
    .pytest_cache/*
    htmlcov/*
    scripts/*
    *.egg-info/*
    setup.py
    conftest.py
    legacy_e2e_supabase_script.py

# Include branch coverage
branch = True

# Coverage data file
data_file = .coverage

[report]
# Exclude lines from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod
    # Type checking imports
    if TYPE_CHECKING:
    # Development/debugging code
    if DEBUG

# Show missing lines in report
show_missing = True

# Precision for percentages
precision = 2

# Skip files with no code
skip_empty = True

# Skip files that can't be traced
skip_covered = False

[html]
# HTML output directory
directory = htmlcov

# Title for HTML report
title = Backend Test Coverage Report

[xml]
# XML output file
output = coverage.xml

[paths]
# Map paths for coverage combination
source = 
    .
    */backend/