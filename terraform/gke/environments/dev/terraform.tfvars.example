# GCP Project Configuration
project_id = "your-gcp-project-id"

# Cluster Configuration
cluster_name = "missing-table-dev"
region       = "us-central1"

# Network Configuration (optional - defaults to 'default' VPC)
# network_name    = "default"
# subnetwork_name = "default"

# Secondary IP Ranges for Pods and Services
# Note: If using default VPC, you may need to create these ranges first
# pods_range_name     = "gke-pods-dev"
# services_range_name = "gke-services-dev"

# Release Channel (RAPID, REGULAR, STABLE)
release_channel = "REGULAR"

# Maintenance Window (HH:MM format, UTC)
maintenance_start_time = "03:00"

# Resource Labels
labels = {
  app         = "missing-table"
  environment = "dev"
  managed_by  = "terraform"
}
