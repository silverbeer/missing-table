{
  "dashboard": {
    "id": null,
    "title": "Missing Table - Security Monitoring",
    "tags": ["security", "missing-table"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Security Events Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(falco_events_total{k8s_ns_name=\"missing-table\"}[1h]))",
            "legendFormat": "Total Events"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Critical Security Events",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(increase(falco_events_total{k8s_ns_name=\"missing-table\", priority=\"Critical\"}[1h]))",
            "legendFormat": "Critical Events"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Failed Authentication Attempts",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"missing-table-backend\", status=~\"401|403\"}[5m]))",
            "legendFormat": "Failed Auth/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 0.1},
                {"color": "red", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0}
      },
      {
        "id": 4,
        "title": "Container Vulnerabilities",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(trivy_image_vulnerabilities{namespace=\"missing-table\", severity=\"Critical\"})",
            "legendFormat": "Critical CVEs"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 18, "y": 0}
      },
      {
        "id": 5,
        "title": "Security Events Timeline",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(falco_events_total{k8s_ns_name=\"missing-table\"}[5m])",
            "legendFormat": "{{priority}} - {{rule}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Events/sec",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 10,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "pointSize": 5,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "never",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8}
      },
      {
        "id": 6,
        "title": "Network Security Events",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, increase(falco_events_total{k8s_ns_name=\"missing-table\", rule=~\".*network.*\"}[1h]))",
            "legendFormat": "",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "File System Access Events",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, increase(falco_events_total{k8s_ns_name=\"missing-table\", rule=~\".*file.*\"}[1h]))",
            "legendFormat": "",
            "format": "table",
            "instant": true
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 8,
        "title": "Resource Usage Security",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(container_memory_working_set_bytes{namespace=\"missing-table\", container!=\"\"}[5m]) / 1024 / 1024",
            "legendFormat": "{{pod}} - {{container}} Memory MB/s"
          },
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=\"missing-table\", container!=\"\"}[5m]) * 100",
            "legendFormat": "{{pod}} - {{container}} CPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Usage",
              "axisPlacement": "auto"
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24}
      },
      {
        "id": 9,
        "title": "Authentication Metrics",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"missing-table-backend\", status=\"200\"}[5m])",
            "legendFormat": "Successful Requests"
          },
          {
            "expr": "rate(http_requests_total{job=\"missing-table-backend\", status=\"401\"}[5m])",
            "legendFormat": "Unauthorized (401)"
          },
          {
            "expr": "rate(http_requests_total{job=\"missing-table-backend\", status=\"403\"}[5m])",
            "legendFormat": "Forbidden (403)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "Requests/sec",
              "axisPlacement": "auto"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 10,
        "title": "Container Security Status",
        "type": "table",
        "targets": [
          {
            "expr": "kube_pod_container_status_running{namespace=\"missing-table\"}",
            "legendFormat": "",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "job": true,
                "instance": true
              },
              "renameByName": {
                "pod": "Pod",
                "container": "Container",
                "Value": "Running"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "auto",
              "displayMode": "auto"
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "refresh": "30s"
  }
}